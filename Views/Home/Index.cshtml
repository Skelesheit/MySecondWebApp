@model (User, Dictionary<string, List<AppS>>)
@{
    ViewData["Title"] = "Home Page";
}

@{
    User user = Model.Item1;
    Dictionary<string, List<AppS>> Dict = Model.Item2;
}
<html>

    <head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true"/>

    </head>


<body>
<div class=".button-container">
    <form asp-action="EnterAdmin" asp-controller="Admin" method="post">
        <button class="enter-button">
            админ
        </button>
    </form>
</div>

<div class=".button-container">
    <form asp-action="ValidationView" asp-controller="Account" method="post">
        <button class="enter-button">
            Enter
        </button>
    </form>
</div>

<div class=".button-container">
    <form asp-action="RegisterView" asp-controller="Account" method="get">
        <button type="submit" class="enter-button">Register</button>
    </form>
</div>

<div class=".button-container">
    <form asp-action="PersonalAccount" asp-controller="Account" method="get">
          <button  type="submit" class="enter-button">
            @if(user != null)
            {
                @user.Name;
            }
            else
            {
                <p>войти</p>
            }
        </button>
    </form> 
</div>

<div class="text-center">
    <h1 class="display-4">Добро пожаловать в Skelesheit Store!</h1>
    @if(user.Name != "null")
    {
       <h2> 
            @user.Name
       </h2>
    }
    else
    {
        <h2>Зарегестрируйтесь или войдите</h2>
    }
 
</div>

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/lib/images/CaruselOffice.jpg" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Попробуйте Microsoft Office!</h5>
        <p>Все документы уже с вами!</p>
        <button  href="Home/Index/Apps/15" class="btn btn-dark">Скачать</button>
      </div>
    </div>
    <div class="carousel-item">
      <img src="/lib/images/CaruselIntertament.jpg" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Попробуйте новые развлечения</h5>
        <button href="/Home/Apps?request=Music"  type="submit" class="btn btn-dark">Опробовать</button>
      </div>
    </div>
    <div class="carousel-item">
      <img src="/lib/images/GamePassService.jpg" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Играйте при помощи Xbox Game Pass</h5>  
        <button target="_blank" href="https://www.xbox.com/ru-RU/games/store/pc-game-pass/cfq7ttc0kgq8?ocid=storeforweb" type="submit" class="btn btn-dark">Опробовать</button>
        
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"  data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Предыдущий</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"  data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Следующий</span>
  </button>
</div>


<a class="move-on-hover" href="/Home/Apps?request=Free">Топ бесплатных >>></a>

<div class="container">
  <div class="row">

@foreach(AppS app in Dict["Free"])
   {
   <div class="col-md-4">
      <div class="card" style="width: 16rem;">
        <div class="text-center">
          <img src="/lib/images/@app.IconSource" class="card-img-top" alt="...">
        </div>
        <div class="card-body">
          <h5 class="card-title">@app.Name</h5>
          <a href="Home/Apps/@app.Id" class="btn btn-primary">Установить</a>
        </div>
      </div>
    </div>
   }

  </div>
</div>



