@model RegistryModel;
@{
    ViewData["Title"] = "RegisterView";
}

<html>
    
<head>
<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/register.css" />
</head>


<body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


<div class="container">
        <div class="row justify-content-center">
            
            <div class="col-md-5 registration-container">
                <form asp-action="RegisterView" asp-controller="Account" method="post">
                    <div asp-validation-summary="All">

                    
                    <div class="form-group">
                    
                        <input type="text" asp-for="Name" required />
                        <label>Username</label>
                        <div class="icon">👤</div>
                    </div>

                    <div class="form-group">
                 
                        <input type="email" asp-for="Email" required />
                        <label>Email</label>
                        <div class="icon">✉️</div>
                    </div>

                    <div class="form-group">
                        
                        <input type="password" asp-for="Password" required />
                        <label>Password</label>
                        <div class="icon">🔒</div>
                    </div>

                    <div class="form-group">
                        
                        <input type="password" asp-for="ConfirmPassword" required />
                        <label>Confirm Password</label>
                        <div class="icon">🔒</div>
                    </div>

                    <div> 

                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                
                </div>

                </form>
            </div>
        </div>

    </div>



</body>

</html>