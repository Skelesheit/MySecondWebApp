@model ValidationModel
@{
    ViewData["Title"] = "ValidationView";
}

<html>

<head>
<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/autorisation.css" /> 

</head>

<body>

    <div class="container">
        <div class="image-container">
            <img src="/lib/images/loginformCat.jpg" alt="Image Description">
     </div>

        <div class="login-container">
            <form asp-action="ValidationView" asp-controller="Account" method="post" >
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                
            <div class="btn-container">
                    <button type="submit" class="btn btn-primary">Login</button>       
            </div>
                
            </form>

            <form asp-action="RegisterView" asp-controller="Account" method="post">
                 <button  type="submit" class="btn btn-registration">Register</button>
            </form>  
            
        </div>
    </div>


</body>

</html>